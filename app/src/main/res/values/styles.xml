<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/status_bar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:selectableItemBackgroundBorderless">@null</item>-->
    </style>

    <style name="SortRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@drawable/rb_sort_font_selector</item>
        <item name="android:drawableRight">@drawable/rb_tick_selector</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:button">@null</item>
    </style>

    <style name="WhiteBtn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/btn_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/btn_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/btn_vertical_padding</item>
    </style>

    <style name="WhiteBtn.Min">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextViewCenter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/tv_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/tv_vertical_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BeanInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/tv_vertical_padding</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/font_size_smaller</item>
    </style>

    <style name="TextViewCenter.Left">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/tv_horizontal_padding</item>
    </style>

    <style name="TextViewCenter.Right">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">@dimen/tv_horizontal_padding</item>
    </style>

    <style name="ItemLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ItemTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
    </style>

    <style name="SelectionRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:paddingLeft">@dimen/lv_item_padding</item>
        <item name="android:paddingRight">@dimen/lv_item_padding</item>
        <item name="android:paddingTop">@dimen/lv_item_padding</item>
        <item name="android:paddingBottom">@dimen/lv_item_padding</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@drawable/rb_font_selector</item>
        <item name="android:drawableRight">@drawable/rb_tick_selector</item>
    </style>

    <style name="TabRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/rb_font_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SelectionRadioButton.DrawableRound">
        <item name="android:textColor">@drawable/rb_font_selector</item>
        <item name="android:drawableRight">@drawable/rb_round_selector</item>
        <item name="android:layout_marginLeft">@dimen/view_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/view_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/view_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/view_horizontal_padding</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ScreenRadioButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/btn_border_selector</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:textColor">@color/border_color</item>
    </style>

    <style name="PopupWindowAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="ToggleButtonTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:drawableRight">@drawable/tb_tick_selector</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:paddingLeft">@dimen/btn_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/btn_horizontal_padding</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- conta_lines_item-->
    <style name="LineItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
    </style>
    <!-- linechart-->
    <style name="LineChart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">330dp</item>
        <item name="android:layout_marginLeft">@dimen/pageinfo_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/pageinfo_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/pageinfo_vertical_margin</item>
    </style>

    <!-- searchbar-->
    <style name="SearchBar">
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rect_input_search</item>
        <item name="android:drawableLeft">@drawable/ic_container_search</item>
        <item name="android:drawableRight">@drawable/ic_container_del</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:hint">搜索</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
    </style>
    <!-- 表格单元格大小-->
    <style name="GridSize">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
    </style>

    <style name="bakedialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_bake_dialog_refer_selector</item>
    </style>

    <style name="dialogItemNameView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="dialogItemWeightView">
        <item name="android:layout_marginLeft">86dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="option_item">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/option_selector</item>
    </style>

    <style name="option_item_vertical" parent="option_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_horizontal" parent="option_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bakingTitle">
        <item name="android:textColor">#000</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">21.375dp</item>
        <item name="android:drawablePadding">6.25dp</item>
    </style>

    <style name="bakingTemp">
        <item name="android:textColor">#000</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bakingAccTemp">
        <item name="android:textColor">#936437</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="bakingOperator">
        <item name="android:background">@drawable/bg_round_3radius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">29.25dp</item>
        <item name="android:paddingLeft">13.4375dp</item>
        <item name="android:paddingRight">13.4375dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="bakingLinesCheckbox">
        <item name="android:checked">true</item>
        <item name="android:button">@drawable/bg_bake_dialog_refer_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10.125sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="bakingOtherSelect">
        <item name="android:textColor">#9ea3a8</item>
        <item name="android:paddingLeft">20.1285dp</item>
        <item name="android:paddingTop">6.75dp</item>
        <item name="android:paddingBottom">6.75dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="behindEdit">
        <item name="android:layout_marginLeft">42dp</item>
        <item name="android:layout_marginRight">42dp</item>
    </style>

    <!-- 设置realplay最下方foot的样式 -->
    <style name="RealPlayMargin">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RealPlayTop">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="RealPlayFoot">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
