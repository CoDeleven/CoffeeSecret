<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/pageinfo_text_horizontal_margin"
                android:paddingRight="@dimen/pageinfo_text_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/id_lines_item_name"
            style="@style/LineItemText"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/id_lines_item_date"
            style="@style/LineItemText"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
