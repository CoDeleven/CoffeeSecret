<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_dialog_bean_selected"
    tools:context="com.dhy.coffeesecret.ui.device.DialogBeanSelected">


    <include
        android:id="@+id/id_title"
        layout="@layout/title_container"/>

    <com.astuetz.PagerSlidingTabStrip
        android:layout_below="@id/id_title"
        android:id="@+id/container_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:pstsDividerColor="@color/colorPrimary"
        app:pstsIndicatorColor="@color/white"
        app:pstsTabPaddingLeftRight="24dp"
        app:pstsUnderlineColor="@color/colorPrimary"
        app:pstsUnderlineHeight="5dp"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/container_tabs"
        android:id="@+id/container_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
