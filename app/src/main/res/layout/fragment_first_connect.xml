<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dhy.coffeesecret.FirstConnectFragment">

    <RelativeLayout
        android:id="@+id/id_fisrt_title"
        android:background="@color/colorPrimary"
        android:paddingLeft="50.625dp"
        android:paddingRight="50.625dp"
        android:paddingBottom="46dp"
        android:paddingTop="29dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/id_temp_layout"
            android:paddingBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:id="@+id/id_first_connect_status"
                android:textSize="27sp"
                android:text="搜索中"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.dhy.coffeesecret.views.LoadingDots
                android:layout_gravity="center_vertical"
                app:LoadingDots_dots_count="4"
                app:LoadingDots_dots_size="5dp"
                app:LoadingDots_dots_space="5dp"
                app:LoadingDots_loop_start_delay="1"
                app:LoadingDots_dots_color="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.dhy.coffeesecret.views.LoadingDots>
        </LinearLayout>

        <EditText
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_below="@id/id_temp_layout"
            android:background="@drawable/bg_round_white_20radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20.25sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_first_search"
            android:drawablePadding="20dp"
            android:paddingTop="9.5625dp"
            android:paddingBottom="9.5625dp"
            android:paddingRight="0dp"
            android:paddingLeft="20dp"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/first_cursor"
            android:hint="查询蓝牙"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_first_bluetooth_list"
        android:layout_below="@id/id_fisrt_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
