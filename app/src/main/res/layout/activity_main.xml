<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhy.coffeesecret.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_conta_home"
        app:contentInsetStartWithNavigation="0dp"
        >
        <TextView
            android:gravity="center"
            android:text="@string/conta_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/actionbar_title_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/id_fragment_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/black_border"
        app:tabIndicatorColor="@color/tab_underline"
        app:tabSelectedTextColor="@color/tab_selected"
        app:tabTextColor="@color/tab_default">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/toolBar"
        android:layout_above="@id/id_fragment_tabLayout"
        android:id="@+id/id_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
