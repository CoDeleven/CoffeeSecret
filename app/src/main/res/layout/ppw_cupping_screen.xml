<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="264dp"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/view_horizontal_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="时间"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/date_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/view_horizontal_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最终得分"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/tv_first_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_second_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <com.edmodo.rangebar.RangeBar
            android:id="@+id/rb_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:barColor="@color/border_color"
            app:barWeight="2dp"
            app:connectingLineColor="@color/colorPrimary"
            app:connectingLineWeight="1dp"
            app:thumbColorNormal="@color/colorPrimaryLight"
            app:thumbColorPressed="@color/colorPrimary"
            app:tickCount="81"
            app:tickHeight="0dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="155dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_round_pricolor_selector"
            android:minHeight="33dp"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>