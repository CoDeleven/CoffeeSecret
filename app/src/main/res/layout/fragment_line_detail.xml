<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_reportinfo"
    tools:context="com.dhy.coffeesecret.ui.device.fragments.LineDetailFragment">


    <com.dhy.coffeesecret.ui.device.views.ScrollViewContainer
        android:id="@+id/sl_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_device_activtiy">

        <ScrollView
            android:id="@+id/scroll1_device_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <include

                    android:id="@+id/reportinfo_device_activity"
                    layout="@layout/report_info_page_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></include>

                <fragment
                    android:id="@+id/linechart_device_activity"
                    android:name="com.dhy.coffeesecret.ui.device.fragments.ReportLineChartPart"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_below="@id/reportinfo_device_activity"
                    android:layout_marginLeft="@dimen/pageinfo_horizontal_margin"
                    android:layout_marginRight="@dimen/pageinfo_horizontal_margin"
                    android:layout_marginTop="8dp">
                </fragment>

                <com.dhy.coffeesecret.ui.device.views.DownRefresh
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/linechart_device_activity"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            </RelativeLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="哈哈"/>
        </ScrollView>
    </com.dhy.coffeesecret.ui.device.views.ScrollViewContainer>
</RelativeLayout>
