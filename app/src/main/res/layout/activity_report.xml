<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EDEEE9"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhy.coffeesecret.ui.device.ReportActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_device_activtiy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:id="@+id/id_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/title_device_child_activity"
            android:textColor="#FFF"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>
    <com.dhy.coffeesecret.views.ScrollViewContainer
        android:padding="0dp"
        android:layout_below="@id/toolbar_device_activtiy"
        android:id="@+id/id_report_scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="#FFF"
                    android:elevation="2dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="13.5sp"
                                android:textColor="#000"
                                android:layout_gravity="center"
                                android:id="@+id/id_baking_bakeDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="烘焙日期：2017-01-01 12:06"/>
                            <TextView
                                android:textSize="13.5sp"
                                android:textColor="#000"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center"
                                android:id="@+id/id_baking_deviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设备：HBCoffee"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="21.375dp"
                            android:src="@drawable/ic_report_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:background="#C7C7C7"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="17dp"
                            android:layout_marginBottom="16dp"
                            android:layout_gravity="left"
                            android:textSize="13.5sp"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品种"/>
                        <LinearLayout
                            android:paddingLeft="7.874dp"
                            android:paddingRight="7.874dp"
                            android:id="@+id/id_bean_container"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:elevation="2dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="9.5625dp"
                    android:background="#FFF"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="20.25dp"
                        android:layout_gravity="left"
                        android:textSize="13.5sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="曲线详情"/>
                    <RelativeLayout
                        android:layout_below="@id/id_baking_developbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/id_baking_lineOperator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="温度曲线图"
                            android:textSize="15sp"
                            android:drawableRight="@drawable/ic_baking_dropdown"/>

                        <com.dhy.coffeesecret.views.BaseChart4Coffee
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/id_baking_lineOperator"
                            android:id="@+id/id_baking_chart"
                            android:layout_width="344.25dp"
                            android:layout_height="200dp"></com.dhy.coffeesecret.views.BaseChart4Coffee>
                        <LinearLayout
                            android:layout_marginTop="23dp"
                            android:layout_below="@id/id_baking_chart"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/id_envTemp"
                                    android:layout_gravity="left"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="环境温度：35.7xx"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/id_inputBeanTemp"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="入豆温度：35.7xx"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/id_endTemp"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="结束温度：35.7xx"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/id_developTime"
                                    android:layout_weight="1"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发展时间：00:00"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/id_developRate"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发展率：20%"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="　　　　　　"/>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <com.dhy.coffeesecret.views.DownRefresh
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/id_report_table"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#936743"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/GridSize"
                        android:layout_weight="1"
                        android:text="@string/reportTime"/>

                    <TextView
                        style="@style/GridSize"

                        android:layout_weight="1"
                        android:text="@string/reportEnvTime"/>

                    <TextView
                        style="@style/GridSize"


                        android:layout_weight="1"
                        android:text="@string/reportBeanTemp"
                        />

                    <TextView
                        style="@style/GridSize"

                        android:layout_weight="1"
                        android:text="@string/reportDryTemp"/>

                    <TextView
                        style="@style/GridSize"

                        android:layout_weight="1"
                        android:text="@string/reportUpTemp"/>
                </TableRow>

            </TableLayout>
        </ScrollView>
    </com.dhy.coffeesecret.views.ScrollViewContainer>
</RelativeLayout>
