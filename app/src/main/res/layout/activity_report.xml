                                    style="@style/report_chart_descriptor"
                                    android:text="00:00"/>
                            </TableRow>

                            <TableRow
                                android:background="@color/black">
                                <TextView
                                    android:textSize="12sp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textAlignment="center"
                                    android:layout_weight="10"
                                    style="@style/report_chart_descriptor"
                                    android:text="一爆开始至结束"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginRight="1px"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </TableRow>
                            <TableRow
                                android:background="@color/black">
                                <TextView
                                    style="@style/report_chart_descriptor"
                                    android:layout_marginLeft="1px"
                                    android:text="平均升温速率"/>
                                <TextView
                                    style="@style/report_chart_descriptor"
                                    android:text="时间"/>
                            </TableRow>
                            <TableRow
                                android:background="@color/black">
                                <TextView
                                    android:layout_marginLeft="1px"
                                    style="@style/report_chart_descriptor"
                                    android:id="@+id/id_avgEnd_temperature"
                                    android:text="00.00"/>
                                <TextView
                                    style="@style/report_chart_descriptor"
                                    android:id="@+id/id_avgEnd_time"
                                    android:text="00:00"/>
                            </TableRow>
                        </TableLayout>
                        <TableLayout
                            android:id="@+id/id_event_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/id_tl_chart_descriptor2"
                            android:layout_marginBottom="10dp">
                            <TableRow
                                android:layout_marginTop="10dp"
                                android:background="@color/black">
                                <TextView
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textAlignment="center"
                                    android:text="事件列表"
                                    android:textSize="12sp"
                                    android:layout_marginTop="1px"
                                    android:layout_marginLeft="1px"
                                    android:layout_marginRight="1px"
                                    style="@style/report_chart_descriptor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </TableRow>
                            <TableRow
                                android:background="@color/black">

                                <TextView
                                    android:layout_marginLeft="1px"
                                    style="@style/report_chart_descriptor"
                                    android:text="事件类型"/>

                                <TextView
                                    style="@style/report_chart_descriptor"
                                    android:text="发生时间"/>

                                <TextView
                                    style="@style/report_chart_descriptor"
